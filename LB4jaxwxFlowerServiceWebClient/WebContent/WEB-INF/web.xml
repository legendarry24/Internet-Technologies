<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>LB4jaxwsFlowerServiceWebClient</display-name>
	<context-param>
		<description>Wsdl location</description>
		<param-name>wsdl</param-name>
		<param-value>http://localhost:9090/flowers?wsdl</param-value>
	</context-param>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<display-name>EncodingFilter</display-name>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>ua.nure.sherbakov.practice7.server.filter.EncodingFilter</filter-class>
		<init-param>
			<description></description>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>ua.nure.sherbakov.practice7.server.listener.ContextListener</listener-class>
	</listener>
	<servlet>
		<description>List existing flowers</description>
		<display-name>ListFlowers</display-name>
		<servlet-name>ListFlowers</servlet-name>
		<servlet-class>ua.nure.sherbakov.practice7.server.client.web.ListFlowers</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListFlowers</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AddFlower</display-name>
		<servlet-name>AddFlower</servlet-name>
		<servlet-class>ua.nure.sherbakov.practice7.server.client.web.AddFlower</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddFlower</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>DeleteFlower</display-name>
		<servlet-name>DeleteFlower</servlet-name>
		<servlet-class>ua.nure.sherbakov.practice7.server.client.web.DeleteFlower</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteFlower</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>FindFlowerByName</display-name>
		<servlet-name>FindFlowerByName</servlet-name>
		<servlet-class>ua.nure.sherbakov.practice7.server.client.web.FindFlowerByName</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FindFlowerByName</servlet-name>
		<url-pattern>/findname</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>FindFlowerByOrigin</display-name>
		<servlet-name>FindFlowerByOrigin</servlet-name>
		<servlet-class>ua.nure.sherbakov.practice7.server.client.web.FindFlowerByOrigin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FindFlowerByOrigin</servlet-name>
		<url-pattern>/findorigin</url-pattern>
	</servlet-mapping>
</web-app>